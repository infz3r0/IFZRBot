@using IFZRBot.Models;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">List users</h2>

<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-responsive table-hover">
            <thead>
                <tr>
                    <th class="text-center">
                        Id
                    </th>
                    <th class="text-center">
                        Email
                    </th>
                    <th class="text-center">
                        Username
                    </th>
                    <th class="text-center">
                        Display name
                    </th>
                    <th class="text-center">
                        Roles
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (ApplicationUser user in Model)
            {
                <tr>
                    <td style="vertical-align:middle">
                        @user.Id
                    </td>
                    <td style="vertical-align:middle">
                        @user.Email
                    </td>
                    <td style="vertical-align:middle">
                        @user.UserName
                    </td>
                    <td style="vertical-align:middle">
                        @user.DisplayName
                    </td>
                    <td style="vertical-align:middle">
                        @Html.Action("_GetRoles", new { uid = user.Id })
                    </td>
                    <td>
                        <a class="btn visible-lg-inline-block btn-warning" href="#">Change roles</a>
                        <a class="btn visible-lg-inline-block btn-danger" href="#">Delete user</a>
                    </td>
                </tr>
            }
        </table>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>