@using IFZRBot.Models
@model IEnumerable<skill>

<tr>
    <td class="text-center">
        <select name="dropdownskill_@(ViewBag.dropdownareaid)_@ViewBag.dropdownskillid" class="form-control">
            @foreach (skill s in Model)
            {
                <option value="@s.skill_id">@s.skill_name </option>
            }

        </select>
    </td>
    <td class="text-center">
        <input type="number" min="0" step="1" name="skillLVNeed_@(ViewBag.dropdownareaid)_@ViewBag.dropdownskillid" value="1" class="form-control"  />
    </td>
    <td class="text-center">
        <input type="number" min="0" max="100" step="0.000001" name="dropchance_@(ViewBag.dropdownareaid)_@ViewBag.dropdownskillid" value="0" class="form-control" />
    </td>
</tr>